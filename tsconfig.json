{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@bulktrack/*": ["packages/*/src"],
      "@bulktrack/api/*": ["apps/api/src/*"]
    }
  },
  "exclude": ["scripts/*"]
}
